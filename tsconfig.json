{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": ["DOM", "DOM.Iterable", "ES2023"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.tsx", "**/*.test.ts"]
}
